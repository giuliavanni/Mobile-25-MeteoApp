<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/boxEvaluationContainer"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginEnd="@dimen/spacing_medium"
        android:background="#0000FF">
        
        <TextView
            android:id="@+id/txtScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="8.5"
            android:textColor="#FFFFFF"/>
        
    </androidx.constraintlayout.widget.ConstraintLayout>
    
    <LinearLayout
        android:id="@+id/llNameContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/boxEvaluationContainer"
        android:layout_margin="@dimen/spacing_medium"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtAccomodationType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hotel"/>

        <TextView
            android:id="@+id/txtAccomodationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome Hotel"
            android:textSize="@dimen/txt_size_large"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/accomodationImage"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@id/llNameContainer"
        android:layout_marginTop="@dimen/spacing_xl"
        tools:src="@drawable/unibo"
        />

    <TextView
        android:id="@+id/txtAccomodationDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/accomodationImage"
        android:layout_margin="@dimen/spacing_medium"
        android:text="Qui ci sarÃ  la descrizione"/>

</androidx.constraintlayout.widget.ConstraintLayout>
