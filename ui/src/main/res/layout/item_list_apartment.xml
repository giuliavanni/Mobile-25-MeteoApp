        <LinearLayout
            android:id="@+id/llNameContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_medium"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@id/txtCustomButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/txtAccomodationType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hotel" />

            <TextView
                android:id="@+id/txtAccomodationName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome Hotel"
                android:textSize="@dimen/txt_size_large" />
        </LinearLayout>

        <ImageView
            android:id="@+id/accomodationImage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="@dimen/spacing_xl"
            app:layout_constraintTop_toBottomOf="@id/llNameContainer"
            tools:src="@drawable/unibo" />

        <TextView
